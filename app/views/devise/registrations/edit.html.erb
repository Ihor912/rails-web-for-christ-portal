<h2>Змінити <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Очікування підтвердження для: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label "Пароль" %> <i>(Залишіть пустим, якщо не хочете додавати змін сюди)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> символів мінімум</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label "Повторіть пароль" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label "Поточний пароль" %> <i>(Нам потрібен ваш поточний пароль, щоб підтвердити новий)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Зберегти" %>
  </div>
<% end %>

<h3>Видалити мій акаунт</h3>

<p>Нещасливі? <%= button_to "Видалити акаунт", registration_path(resource_name), data: { confirm: "Чи ви впевнені?" }, method: :delete %></p>

<%= link_to "Повернутись", :back %>
