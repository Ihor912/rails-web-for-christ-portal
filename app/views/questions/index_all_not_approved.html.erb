<h1>Неопубліковані Запитання</h1>

<table>
  <thead>
    <tr>
      <th>Текст</th>
      <th>Відповідь</th>
      <th>Автор</th>
      <th>Відповів</th>
      <th>Likes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @not_approved_questions.each do |question| %>
      <tr>
        <td><%= question.text %></td>
        <td><%= question.answer %></td>
        <td><%= question.author %></td>
        <td><%= question.respondent_id %></td>
        <td><%= question.likes %></td>
        <% if user_signed_in? && current_user.admin? %>
          <td><%= link_to 'Деталі', question %></td>
          <td><%= link_to 'Відповісти', edit_question_path(question) %></td>
          <td><%= link_to 'Опублікувати', approve_question_path(question) %></td>
          <td><%= link_to 'Видалити', question, method: :delete, data: { confirm: 'Чи ви впевненні?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
