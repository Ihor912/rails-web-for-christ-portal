<div style="margin-left: 15px;">
  <% if user_signed_in? && current_user.admin? %>
    <%= link_to questions_path do %> 
      <button class="button padding-large border">Опубліковані запитання</button> 
    <% end %>
  <% end %>
  <%= link_to new_question_path do %>
    <button class="button padding-large border">Нове Запитання</button>
  <% end %>
</div>

<% @not_approved_questions.each do |question| %>
  <div class="post-container">
    <div class="container">	<h3>
        <b class="place-left"><%= question.text %></b>
        <span class="date-label place-right"> <%= time_ago_in_words(question.created_at) %> тому</em></span>
    </h3> </div>
    <div class="container">
      <p><%= question.answer %></p>
      <div class="row">
        <div class="place-left">
          <% if user_signed_in? && current_user.admin? %>
            <%= link_to edit_question_path(question) do %> <button class="button border">Відповісти</button> <% end %>
            <%= link_to approve_question_path(question) do %> <button class="button border">Опублікувати</button> <% end %>
            <%= link_to question, method: :delete, data: { confirm: 'Чи ви впевненні?' } do %> <button class="button border">Видалити</button> <% end %>
          <% end %>
        </div>
        <div class="place-right">
          <p><span>
            <b>Автор:  </b> 
            <span class="tag"><%= question.author %></span>
          </span></p>
        </div>
      </div>
    </div>
  </div>
<% end %>