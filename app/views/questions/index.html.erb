<h1>Маєш Запитання?</h1>

<% if user_signed_in? && current_user.admin? %>
  <%= link_to 'Запитання без відповіді', index_all_not_approved_questions_path %>
<% end %>
<%= link_to 'Нове Запитання', new_question_path %>

<table>
  <thead>
    <tr>
      <th>Текст</th>
      <th>Відповідь</th>
      <th>Автор</th>
      <th>Відповів</th>
      <th>Likes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.text %></td>
        <td><%= question.answer %></td>
        <td><%= question.author %></td>
        <td><%= question.respondent_id %></td>
        <td><%= question.likes %></td>
        <% if user_signed_in? && current_user.admin? %>
          <td><%= link_to 'Деталі', question %></td>
          <td><%= link_to 'Відповісти', edit_question_path(question) %></td>
          <td><%= link_to 'Сховати', disapprove_question_path(question) %></td>
          <td><%= link_to 'Видалити', question, method: :delete, data: { confirm: 'Чи ви впевненні?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
