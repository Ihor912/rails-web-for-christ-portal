<%= form_for [@category, @article] do |f| %>
	<% if @article.errors.any? %>
	<div id="errors">
	<h2><%= pluralize(@article.errors.count, "error") %> prevented this article from saving</h2>
	<ul>
	<% @article.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>
	</ul>
	</div>
	<% end %>
	<p>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
	</p>
	<p>
	<%= f.label :body %><br>
	<%= f.text_area :body %>
	</p>
	<p>
	<%= f.label :user_id %><br>
	<%= f.text_field :user_id %>
	</p>
	<p>
	<%= f.label :category_id %><br>
	<%= f.select :category_id, options_for_select(@categories.collect{|category| [category.name, category.id] }, @category.id), html: {selected: true} %>
	</p>
	<p>
	<%= f.label :moderated %><br>
	<%= f.text_field :moderated %>
	</p>
	<p>
	<%= f.submit %>
	</p>
<% end %>