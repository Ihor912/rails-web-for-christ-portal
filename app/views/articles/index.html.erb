<% @articles.each do |article| %>
  <div class="article post-container">
    <%= render article %>
  </div>
<% end %>

<% if @articles.present? %>
  <br>
  <div class="center-align">
    <% if @page > 0 %>
      <%= link_to articles_path(page: @page - 1) do %> <button class="form-button" style="width: 300px;">&larr; Попередня</button> <% end %>
    <% end %>
    <%= link_to articles_path(page: @page + 1) do %> <button class="form-button" style="width: 300px;">Наступна &rarr;</button> <% end %>
  </div>
<% end %>