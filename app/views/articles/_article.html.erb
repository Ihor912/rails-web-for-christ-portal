<div class="container-without-padding">
	<%= link_to article_path(article.link_name) do %>
		<%= image_tag "woods.jpg", alt: "Nature", class: "article-image" %>
	<% end %>
</div>
<div class="container">
	<h3>
		<b class="place-left"><%= link_to article.title, article_path(article.link_name) %></b>
		<span class="date-label place-right"> Змінено <%= time_ago_in_words(article.created_at) %> тому</em></span>
	</h3>
</div>
<div class="container">
	<p><%= article.body %></p>
	<div class="row">
        <div class="place-left">
          	<p> <%= link_to article_path(article.link_name) do %>
					<button class="button padding-large border"> <b>ДЕТАЛЬНІШЕ »</b> </button>
				<% end %> </p>
        </div>
        <div class="place-right">
          	<p><span class="padding-large">
				<b>Переглядів:  </b> 
				<span class="tag"><%= article.views != 0 ? article.views : '' %></span>
			</span></p>
        </div>
    </div>
</div>